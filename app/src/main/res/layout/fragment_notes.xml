<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@mipmap/patternz"
    tools:context="com.srishti.srish.coursecodify_v1.NotesFragment">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="@string/notes_fragment"
            android:id="@+id/fragment_heading"/>

        <ListView
            android:id="@+id/listView"
            android:layout_below="@+id/fragment_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle = "bold"
            android:background="@drawable/border_listview"
            android:layout_margin = "10dp"

            />

    </RelativeLayout>


