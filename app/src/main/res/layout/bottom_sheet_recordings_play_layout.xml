<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name_Of_Recordings"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:paddingLeft="15dp"
        android:hint="Recodings"/>

    <ImageView
        android:id="@+id/play_pause_recording"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        android:paddingRight="10dp"
        android:src="@mipmap/play" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/play_pause_recording"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/timeOfSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play_pause_recording"
        android:layout_alignStart="@+id/play_pause_recording"
        android:layout_below="@+id/seekbar"
        android:hint="@string/timer_hint" />
</RelativeLayout>
