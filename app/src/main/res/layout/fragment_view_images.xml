<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="200dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@mipmap/patternz"
    tools:context="com.srishti.srish.coursecodify_v1.ViewImagesFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_image_heading"
            android:text="@string/image_fragment"
            android:fontFamily="@font/aclonica"/>

        <ListView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_image_heading"
            android:layout_marginTop="20dp"
            android:textStyle = "bold"
            android:background="@drawable/border_listview"
            android:id="@+id/listOfImages">

        </ListView>


</RelativeLayout>


