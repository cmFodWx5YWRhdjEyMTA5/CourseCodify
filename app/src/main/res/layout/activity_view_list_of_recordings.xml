<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.srishti.srish.coursecodify_v1.ViewListOfRecordingsActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:id="@+id/recording_listOfEvents"
        android:background="@mipmap/spinnerbackground"
        />

    <ListView
        android:id="@+id/listOfRecordings"
        android:layout_below="@+id/recording_listOfEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border_listview"

        android:textStyle = "bold"
        android:layout_margin = "10dp"


        />

</RelativeLayout>
