<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srishti.srish.coursecodify_v1">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".NavigationDrawerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:parentActivityName=".NavigationDrawerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TakeImagesActivity"
            android:parentActivityName=".NavigationDrawerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewListOfPicturesActivity"
            android:parentActivityName=".TakeImagesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewImageFullScreenActivity"
            android:parentActivityName=".ViewListOfPicturesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TakeNotesActivity"
            android:parentActivityName=".NavigationDrawerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewListOfNotesActivity"
            android:parentActivityName=".TakeNotesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RecordingActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ViewListOfRecordingsActivity"></activity>
    </application>

</manifest>